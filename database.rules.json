{
  "rules": {
    ".read": true,
    ".write": true,

    "users": {
      ".indexOn": ["email", "status", "role", "department", "rfidTagId"]
    },
    "doors": {
       ".indexOn": ["name", "status"]
    },
    "devices": {
       ".indexOn": ["name", "status", "typeCode", "firmware"]
    },
    "access_logs": {
      ".indexOn": ["timestamp", "user_name", "door_name", "action", "method"]
    }
  }
}